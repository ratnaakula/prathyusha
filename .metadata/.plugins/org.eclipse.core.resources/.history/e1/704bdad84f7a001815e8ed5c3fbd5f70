import java.util.Scanner;
public class Problem5_5 {
	public static void main(String[] args) {
		final double POUNDS_PER_KILOGRAM = 2.2;
		final double KILOGRAM_PER_POUND = 0.454;
		//Display header
		System.out.print(" Kilograms       Pounds    |      Pounds        Kilograms ");
		for(int i = 1; i <=199;i+= 2)
		
			System.out.printf(" %d %-10.3f \n",i,(i *POUNDS_PER_KILOGRAM ));
		for(int j = 20; j <=515; j+= 5)
		System.out.printf("%-21d %-20.3f \n" , j, (j * KILOGRAM_PER_POUND));
		
	}

}
//(Conversion from kilograms to pounds and pounds to kilograms) 
		//Write a program that displays the following two tables side by side:
			/*Kilograms  Pounds    |      Pounds      Kilograms 
              1             2.2    |      20               9.09
              3             6.6    |      25              11.36 
          ... 197         433.4    |      510            231.82 
              199         437.8    |      515            234.09 */
			