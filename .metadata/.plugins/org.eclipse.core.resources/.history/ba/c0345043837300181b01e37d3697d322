import java.util.Scanner;
public class Problem4_7 // Corner point coordinates
{
	public static void main(String[] args)
	{
		Scanner input = new Scanner(System.in);
		//Prompt the user to enter the radius of the bounding circle
		System.out.print(" Enter the radius of the bounding circle:");
		double radius = input.nextDouble();
		System.out.println("The coordinates of five points on the pentagon are" );
		for( int i = 0; i <= 5; i++)
		{
			double x = radius *   Math.cos(2.0 * Math.PI/5.0 * i);// side s = 2*radius*sin PI/5;
			double y = radius * Math.sin(2.0 * Math.PI/5.0 * i);
			System.out.println(" (" +x + " ,  " +y +")");
	}
		
	}
}
